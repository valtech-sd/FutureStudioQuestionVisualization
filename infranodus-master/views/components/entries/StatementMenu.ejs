<div id='statementmenu'>

<a href="javascript:" class="tooltip researchpane" title="hide the text pane" id="statements-link">
    <span></span>
</a> 
<a href="javascript:" id="addcontext-link" class="tooltip editorpane" title="see the similarities with another graph (intersections): click this and then choose another graph in the menu.">
        <!-- Addcontext icon -->
        <span></span>
    </a>

<a href="javascript:" id="diffcontext-link" class="tooltip editorpane" title="see the differences with another graph (what's not present in this graph that's present there): click this and then choose another graph in the menu.">
        <!-- Addcontext icon -->
        <span></span>
</a>

<a href="javascript:" class="tooltip researchpane" title="make graph dynamic: as you scroll the text entries you'll see them highlighted" id="timer-link">
    <span></span>
</a> 

<a href="javascript:" class="tooltip researchpane" title="play dynamic graph: infranodus will scroll the text entries and highlight them on the graph" id="watch-link">
    <span></span>
</a> 

<% if (contextpublic && context) { %>
    <a href="javascript:" id="privacy-link" class="is-public researchpane">
        <!-- Share icon -->
        <span></span>
    </a>
<% } else if (!perceivername && context) { %>
    <a href="javascript:" id="privacy-link" class="researchpane">
        <!-- Share icon -->
        <span></span>
    </a>
<% } %>

<% if (!perceivername) { %>
    <a href="javascript:" id="import-link" class="researchpane" class="tooltip" title="import from external sources">
        <!-- Import icon -->
        <span></span>
    </a>
    <a href="javascript:" id="collaborate-link" class="researchpane">
        <!-- Collaborate icon -->
        <span></span>
    </a>
<% } %>

<% if ((context) && (!perceivername)) { %>
    <form action='/post' name='deletecontext' id="deletecontext"
        method='post' class='pure-form'
        onsubmit="return confirm('Deleting the context will delete all the statements inside. Are you sure?');">
        <input type="hidden" name="context" value="<%= context %>">
        <input type="hidden" id="selectedContexts" name="selectedContexts" value="">
        <input type="hidden" name="statementid" value="">
        &nbsp; <br />
        <input type='submit' id="deletecontextbutton" name="delete" value="delete context">
    </form>
<% } %>

<% if (!perceivername) { %>
    <a href="javascript:" id="microphone-link" class="tooltip editorpane" title="voice to text on/off">
        <!-- Microphone icon -->
        <span></span>
    </a>
    
<% } %>

</div>


