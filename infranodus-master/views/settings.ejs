<script>


var stopwords = decodeURIComponent(getUrlVars()["stopwords"]);

var returncontext = getUrlVars()["returncontext"];



function getUrlVars()
{
    var vars = [], hash;
    var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
    for(var i = 0; i < hashes.length; i++)
